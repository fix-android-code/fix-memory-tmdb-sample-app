<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <!-- create gradient you want to use with the angle you want to use -->
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="@color/custom_gray_nickel"
                android:endColor="@color/custom_aot"
                android:startColor="@color/custom_aot" />

        </shape>
    </item>
    <!-- create the stroke for top, left, bottom and right with the dp you want -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#000"
                android:endColor="@color/custom_aot"
                android:startColor="@color/md_black_1000"
                android:type="sweep" />
        </shape>
    </item>

</layer-list>