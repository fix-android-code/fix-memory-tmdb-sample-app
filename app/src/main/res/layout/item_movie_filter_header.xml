<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.chip.Chip
        android:id="@+id/movieFilterChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/filter"
        android:textColor="@color/custom_gray_nickel"
        app:chipBackgroundColor="@color/md_black_1000"
        app:chipIcon="@drawable/ic_round_filter_24"
        app:chipIconTint="@color/custom_gray_nickel"
        app:chipStrokeColor="@color/custom_aot"
        app:chipStrokeWidth="2dp"
        app:iconStartPadding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>